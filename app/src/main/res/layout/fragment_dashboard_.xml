                android:id="@+id/sun">
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:alpha="0.8"
                android:background="#CEF2FB"
                android:id="@+id/fri">
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:alpha="0.8"
                android:background="#E9F2F9"
                android:id="@+id/sat">
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:alpha="0.8"
                android:background="#CEF2FB"
                android:id="@+id/mon">
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
