                    android:background="#E2E8E8"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_weight="1.0"
                    android:maxEms="1"
                    android:background="#E2E8E8"
                    android:gravity="center"/>
